<div id="main-body" class="regular_ver imageBG-others">
    <div class="container">
	<!-- edit form column -->
     	<h1 class="">Edit Pet Info</h1>

        <%= form_for @pet, html: {class: "form-horizontal"} do |f| %>
        
            <div class="form-group">
                <label class="col-lg-3 control-label">Name:</label>
                <div class="col-lg-8">
                    <%= f.text_field :name, :placeholder => "Name", class: "form-control", :autofocus => true, :required => true %>
                </div>
            </div>

            <div class="form-group">
                <%= f.label "Birthday ", class: "col-lg-3 control-label" %>
                <div class="col-lg-8">
                    <%= f.date_field :birthday, :value => "asdf", class: "form-control", :autofocus => true, :required => true %>      
                </div>
            </div>
            <br/>
            <div class="form-group">
            
                <%= f.label "Gender ", class: "col-md-3 control-label" %>
                <div class="col-md-1">
                <%= f.select :gender, options_for_select([['Male',1],['Female',2]], params[:gender]), class: "form-control" %>
                </div>

                <%= f.label "Type " , class: "col-md-1 control-label"%>
                <div class="col-md-1">
                <%= f.select :category, options_for_select([['Dog',1],['Cat',2]], params[:category]), class: "form-control" %>
                </div>

                <%= f.label "Breed ", class: "col-lg-1 control-label" %>
                <div class="col-lg-1">
                <%= f.select :breed, options_for_select([['A',1],['B',2], ['C',3]], params[:breed]), class: "form-control" %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-8">
                    <input class="btn btn-primary" value="Save Changes" type="submit"> <span class=""></span>

                    <input class="btn btn-default" value="Cancel" type="reset">
                </div>
            </div>
        <% end %>
    </div>
    </div>
</div>
<hr class="">