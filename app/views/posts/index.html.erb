<%= render 'layouts/sideMenu' %>

<div id="main_body" class="center">
<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Sendfrom</th>
      <th>Sendto</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.SendFrom %></td>
        <td><%= post.SendTo %></td>
        <td><%= post.Description %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
</div>