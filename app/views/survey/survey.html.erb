	<head>
		<%= stylesheet_link_tag "fwSliderComponent",media:"all" %>
		<%= stylesheet_link_tag "fwSliderDefault",media:"all" %>
		<script language="JavaScript">
		function getResult(){
			var list = document.getElementsByTagName("input");
			var id;

			for(var i=0; i < list.length; i++){
			   if (list[i].checked){
			    	id = list[i].name.split('')[1];
			      	document.getElementById("UserAnswer"+id).value = list[i].value;
			   }
			}
		}

		function getTextArea(){
			document.getElementById("UserComment").value = document.getElementById("trickExplain").value ;
		}
		</script>
	</head>
	<body>
		<div id='main-body' class="imageBG-others regular-ver">	
			<div class="container">
				<header class="clearfix">
					<h1>Customer Survey</h1>
				</header>
				<div id="cbp-fwslider" class="cbp-fwslider">
					
					<ul>
						<li>
							<div style="height:100%;">
								<p>1. How old are you?</p>
