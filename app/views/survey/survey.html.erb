						<%= f.hidden_field :UserAnswer5, :value => "0", class: "form-control", :autofocus => true, :required => true, :id => "UserAnswer4" %>
						<%= f.hidden_field :UserAnswer6, :value => "0", class: "form-control", :autofocus => true, :required => true, :id => "UserAnswer5" %>
						<%= f.hidden_field :UserAnswer7, :value => "0", class: "form-control", :autofocus => true, :required => true, :id => "UserAnswer6" %>
						<%= f.hidden_field :UserAnswer8, :value => "0", class: "form-control", :autofocus => true, :required => true, :id => "UserAnswer7" %>
						<%= f.hidden_field :UserAnswer9, :value => "0", class: "form-control", :autofocus => true, :required => true, :id => "UserAnswer8" %>
						<%= f.hidden_field :UserAnswer10, :value => "0", class: "form-control", :autofocus => true, :required => true, :id => "UserAnswer9" %>
						<%= f.hidden_field :UserComment, :value => "0", class: "form-control", :autofocus => true, :required => true, :id => "UserComment" %>
						<%= f.submit %>
					<% end %>
			</div>
		</div>
		<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" %>
		<%= javascript_include_tag "SurveyPageModernizr" %>
		<%= javascript_include_tag "cbpFWSlider.js" %>
		<script>
			$( function() {
				$( '#cbp-fwslider' ).cbpFWSlider();
			} );
		</script>
