								<label>a. 0 - 3<input type="radio" name="a2" value="1" onclick="getResult();"></input></label><br><br>
								<label>b. 4 - 6<input type="radio" name="a2" value="2" onclick="getResult();"></input></label><br><br>
								<label>c. 7 - 9<input type="radio" name="a2" value="3" onclick="getResult();"></input></label><br><br>
								<label>d. More than 9<input type="radio" name="a2" value="4" onclick="getResult();"></input></label><br><br>
							</div>
						</li>
						<li>
							<div style="height:100%;">
